<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Toolbar">
        <item name="android:layout_width">@dimen/_0dp</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:paddingEnd">@dimen/padding_horizontal_very_small</item>
        <item name="buttonGravity">center_vertical</item>
        <item name="navigationIconTint">@color/black</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleMarginStart">0dp</item>
    </style>

    <style name="Toolbar.TitleText">
        <item name="android:textSize">@dimen/text_size_header</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textInputLayoutStyle">
        <item name="android:enabled">false</item>
        <item name="android:imeOptions">actionDone|flagNoExtractUi</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColorHint">@color/gray_white</item>
        <item name="boxStrokeWidth">@dimen/_0dp</item>
        <item name="boxStrokeWidthFocused">@dimen/_0dp</item>
        <item name="endIconDrawable">@drawable/ic_chevron_right</item>
        <item name="endIconMode">custom</item>
        <item name="endIconTint">@color/black</item>
        <item name="hintTextColor">@color/black</item>
    </style>

    <style name="textInputEditTextStyle">
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:imeOptions">actionDone|flagNoExtractUi</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/gray_white</item>
        <item name="android:textSize">@dimen/text_size_main</item>
        <item name="boxStrokeWidth">@dimen/_0dp</item>
        <item name="boxStrokeWidthFocused">@dimen/_0dp</item>
    </style>

</resources>