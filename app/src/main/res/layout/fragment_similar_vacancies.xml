<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/backButtonImageView"
        android:layout_width="@dimen/back_button"
        android:layout_height="@dimen/back_button"
        android:layout_marginVertical="@dimen/padding_vertical"
        android:layout_marginStart="@dimen/padding_horizontal_very_small"
        android:src="@drawable/left_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/black"
        android:contentDescription="@string/back_button" />

    <TextView
        android:id="@+id/similarVacanciesHeaderTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_horizontal_very_small"
        android:fontFamily="@font/ys_display_medium"
        android:text="@string/similar_vacancies"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_header"
        app:layout_constraintBottom_toBottomOf="@id/backButtonImageView"
        app:layout_constraintStart_toEndOf="@id/backButtonImageView"
        app:layout_constraintTop_toTopOf="@id/backButtonImageView" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/similarVacanciesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_0dp"
        android:layout_marginHorizontal="@dimen/padding_horizontal"
        android:layout_marginTop="@dimen/padding_vertical_big"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backButtonImageView"
        tools:listitem="@android:layout/list_content" />

</androidx.constraintlayout.widget.ConstraintLayout>