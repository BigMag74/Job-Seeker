<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/filteringSettingsToolbar"
        style="@style/Toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_arrow_left"
        app:title="@string/filtering_settings"
        app:titleTextAppearance="@style/TitleText" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/workplaceTextInputLayout"
        style="@style/textInputLayoutStyle"
        android:layout_marginTop="@dimen/margin_vertical_small"
        android:hint="@string/workplace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filteringSettingsToolbar">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/selectedWorkplaceTextInputEditText"
            style="@style/textInputEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/sectorTextInputLayout"
        style="@style/textInputLayoutStyle"
        android:layout_marginTop="@dimen/margin_vertical_small"
        android:hint="@string/sector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/workplaceTextInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/selectedSectorTextInputEditText"
            style="@style/textInputEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/enterTheAmountTextInputLayout"
        style="@style/SalaryInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_vertical"
        android:hint="@string/expected_salary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sectorTextInputLayout"
        app:placeholderText="@string/enter_the_amount">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/selectedEnterTheAmountTextInputEditText"
            style="@style/SalaryEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_with_corners"
            android:backgroundTint="@color/light_gray_gray"
            android:textColorHint="@color/gray_white" />
    </com.google.android.material.textfield.TextInputLayout>


    <CheckBox
        android:id="@+id/doNotShowWithoutSalaryCheckBox"
        android:layout_marginTop="@dimen/margin_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_horizontal"
        android:layout_marginEnd="@dimen/padding_horizontal_very_small"
        android:button="@null"
        android:drawableEnd="?android:attr/listChoiceIndicatorMultiple"
        android:drawableTint="@color/blue"
        android:fontFamily="@font/ys_display_regular"
        android:text="@string/do_not_show_without_salary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/enterTheAmountTextInputLayout"
        android:textSize="@dimen/text_size_main" />


    <Button
        android:id="@+id/applyButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="@dimen/padding_horizontal"
        android:layout_marginBottom="4dp"
        android:background="@drawable/rectangle_with_corners"
        android:backgroundTint="@color/blue"
        android:fontFamily="@font/ys_display_medium"
        android:text="@string/apply"
        android:textAllCaps="false"
        android:textColor="@color/white_universal"
        android:textSize="@dimen/text_size_main"
        app:layout_constraintBottom_toTopOf="@id/resetButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="@dimen/padding_horizontal"
        android:layout_marginTop="@dimen/padding_vertical"
        android:layout_marginBottom="@dimen/margin_vertical"
        android:background="@android:color/transparent"
        android:fontFamily="@font/ys_display_medium"
        android:text="@string/reset"
        android:textAllCaps="false"
        android:textColor="@color/red"
        android:textSize="@dimen/text_size_main"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>