<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidLineStart"
            android:layout_width="@dimen/_0dp"
            android:layout_height="@dimen/_0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.030592734" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidLineEnd"
            android:layout_width="@dimen/_0dp"
            android:layout_height="@dimen/_0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/padding_horizontal" />

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/vacancyToolbar"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/padding_vertical_small"
            android:paddingTop="@dimen/padding_vertical"
            android:paddingEnd="@dimen/padding_vertical"
            android:paddingBottom="@dimen/padding_vertical"
            app:contentInsetStartWithNavigation="0dp"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toStartOf="@id/shareImageView"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/ic_left_arrow"
            app:navigationIconTint="@color/black"
            app:title="@string/vacancy"
            app:titleMarginStart="@dimen/margin_icon"
            app:titleTextAppearance="@style/Toolbar.TitleText" />

        <ImageView
            android:id="@+id/shareImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_icon"
            android:layout_marginEnd="@dimen/margin_icon"
            android:contentDescription="@string/share_button"
            android:src="@drawable/share_icon"
            app:layout_constraintBottom_toBottomOf="@id/vacancyToolbar"
            app:layout_constraintEnd_toStartOf="@id/likeImageView"
            app:layout_constraintStart_toEndOf="@id/vacancyToolbar"
            app:layout_constraintTop_toTopOf="@id/vacancyToolbar" />

        <ImageView
            android:id="@+id/likeImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/padding_horizontal_smaller"
            android:contentDescription="@string/like_button"
            android:src="@drawable/like_icon_unselected"
            app:layout_constraintBottom_toBottomOf="@id/vacancyToolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/shareImageView"
            app:layout_constraintTop_toTopOf="@id/vacancyToolbar" />

        <TextView
            android:id="@+id/vacancyHeaderTextView"
            style="@style/BigHeaderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_vertical"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="@id/guidLineEnd"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/guidLineStart"
            app:layout_constraintTop_toBottomOf="@id/vacancyToolbar"
            tools:text="Android-разработчик" />

        <TextView
            android:id="@+id/salaryTextView"
            style="@style/TitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_horizontal_very_small"
            app:layout_constraintEnd_toEndOf="@id/guidLineEnd"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/guidLineStart"
            app:layout_constraintTop_toBottomOf="@id/vacancyHeaderTextView"
            tools:text="от 100 000 ₽" />

        <androidx.cardview.widget.CardView
            android:id="@+id/vacancyCardView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_vertical"
            android:backgroundTint="@color/light_gray"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/_0dp"
            app:layout_constraintEnd_toEndOf="@id/guidLineEnd"
            app:layout_constraintStart_toStartOf="@id/guidLineStart"
            app:layout_constraintTop_toBottomOf="@id/salaryTextView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_horizontal">

                <ImageView
                    android:id="@+id/vacancyLogoImageView"
                    android:layout_width="@dimen/logo_dim"
                    android:layout_height="@dimen/logo_dim"
                    android:contentDescription="@string/vacancy_icon"
                    tools:src="@drawable/logo_placeholder" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/employerNameTextView"
                        style="@style/TitleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Еда" />

                    <TextView
                        android:id="@+id/vacancyAreaTextView"
                        style="@style/RegularText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Москва" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/experienceLinearLayout"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_vertical"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@id/guidLineEnd"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/guidLineStart"
            app:layout_constraintTop_toBottomOf="@id/vacancyCardView">

            <TextView
                style="@style/TitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/required_experience" />

            <TextView
                android:id="@+id/experienceTextView"
                style="@style/RegularText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_vertical_small"
                tools:text="От 1 года до 3 лет" />

            <TextView
                android:id="@+id/scheduleAndEmploymentTextView"
                style="@style/RegularText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_vertical"
                tools:text="Полная занятость, Удаленная работа" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/descriptionLinearLayout"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_vertical_big"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@id/guidLineEnd"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/guidLineStart"
            app:layout_constraintTop_toBottomOf="@id/experienceLinearLayout">

            <TextView
                style="@style/TitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vacancy_description" />

            <TextView
                android:id="@+id/descriptionTextView"
                style="@style/RegularText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_vertical_big"
                tools:text="HTML описание" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/keySkillsLinearLayout"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_vertical"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@id/guidLineEnd"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/guidLineStart"
            app:layout_constraintTop_toBottomOf="@id/descriptionLinearLayout">

            <TextView
                style="@style/TitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/key_skills" />

            <TextView
                android:id="@+id/keySkillsTextView"
                style="@style/RegularText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_vertical_big"
                tools:text="    ·   Kotlin\n    ·   Java\n    ·   Retrofit\n    ·   Koin" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contactsLinearLayout"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_vertical"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@id/guidLineEnd"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/guidLineStart"
            app:layout_constraintTop_toBottomOf="@id/keySkillsLinearLayout">

            <TextView
                style="@style/TitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contacts" />

            <TextView
                android:id="@+id/contactsNameTitleTextView"
                style="@style/MediumText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_vertical_big"
                android:text="@string/contact_person" />

            <TextView
                android:id="@+id/contactsNameTextView"
                style="@style/RegularText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_vertical_small"
                tools:text="Ирина" />

            <TextView
                android:id="@+id/contactsEmailTitleTextView"
                style="@style/MediumText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_vertical_big"
                android:text="@string/email" />

            <TextView
                android:id="@+id/contactsEmailTextView"
                style="@style/RegularTextBlue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_vertical_small"
                tools:text="i.lozgkina@yandex.ru" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/contactsPhoneRecycleView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:itemCount="2"
                tools:listitem="@layout/phones_layout" />
        </LinearLayout>

        <TextView
            android:id="@+id/similarVacanciesButtonTextView"
            style="@style/MediumTextWhite"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/button_horizontal_margin"
            android:layout_marginTop="@dimen/margin_vertical"
            android:layout_marginEnd="@dimen/button_horizontal_margin"
            android:layout_marginBottom="@dimen/margin_vertical"
            android:background="@drawable/rectangle_with_corners"
            android:gravity="center"
            android:paddingTop="@dimen/button_vertical_padding"
            android:paddingBottom="@dimen/button_vertical_padding"
            android:text="@string/similar_vacancies"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/contactsLinearLayout" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>