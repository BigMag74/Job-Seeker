<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/padding_horizontal"
    android:layout_marginVertical="@dimen/padding_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/vacancyLogo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/vacancy_icon"
        tools:src="@drawable/logo_placeholder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_horizontal_small"
        android:orientation="vertical">

        <TextView
            android:id="@+id/vacancyHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ys_display_medium"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_header"
            tools:text="Android-разработчик, Москва" />

        <TextView
            android:id="@+id/vacancyDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ys_display_regular"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_main"
            tools:text="Еда" />

        <TextView
            android:id="@+id/vacancySalary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ys_display_regular"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_main"
            tools:text="от 100 000 ₽" />

    </LinearLayout>

</LinearLayout>